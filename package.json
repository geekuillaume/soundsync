{
  "name": "soundsync",
  "version": "0.0.0",
  "description": "Plug virtual cables between any audio source and any speakers in your home",
  "author": "Guillaume Besson <guillaume@besson.co>",
  "homepage": "https://github.com/geekuillaume/soundsync",
  "main": "app/index.js",
  "bin": "app/index.js",
  "scripts": {
    "test": "echo Not implemented yet",
    "build": "tsc -b",
    "build:watch": "tsc -w",
    "start": "node -r source-map-support/register app/index.js",
    "start:electron": "electron app/index.js",
    "pack": "electron-builder",
    "postinstall": "cd app && yarn",
    "lint": "eslint --ignore-pattern node_modules --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "deploy": "np"
  },
  "license": "BSL 1.1",
  "devDependencies": {
    "@types/auto-launch": "^5.0.1",
    "@types/bonjour": "^3.5.5",
    "@types/debug": "^4.1.5",
    "@types/emscripten": "^1.39.3",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.0.0",
    "@types/superagent": "^4.1.4",
    "@types/webrtc": "^0.0.25",
    "@types/yargs": "^13.0.4",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "electron": "7.1.11",
    "electron-builder": "22.4.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "np": "^6.2.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "np": {
    "publish": false
  },
  "build": {
    "appId": "geekuillaume.soundsync",
    "productName": "Soundsync",
    "directories": {
      "output": "bin"
    },
    "afterPack": "./scripts/electronpack-hook.js",
    "extraResources": [
      "webui/dist",
      "res/**/*"
    ],
    "win": {
      "asar": false
    },
    "linux": {
      "asar": false,
      "target": [
        "deb",
        "pacman"
      ]
    },
    "pacman": {
      "fpm": [
        "--after-install=scripts/package_extra/install.sh"
      ],
      "depends": [
        "libnotify",
        "libxss",
        "nspr",
        "nss",
        "pulseaudio"
      ]
    },
    "deb": {
      "fpm": [
        "--after-install=scripts/package_extra/install.sh"
      ],
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libasound2",
        "libxss1",
        "pulseaudio"
      ]
    }
  }
}
